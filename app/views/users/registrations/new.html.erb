<h2>Sign up</h2>
<p class="notice"><%= notice %></p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: :false } }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-[100%] border border-2 border-dark' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'w-[100%] border border-2 border-dark' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-[100%] border border-2 border-dark' %>
  </div>

  <%= f.text_field :name, autofocus: true, placeholder: 'Name', class: 'w-[100%] border border-3 border-dark mt-5 mb-5' %>

  <div class="input-group input-group-outline mb-6 bg-blue-gray-50">
    <label class="form-label">Bio</label>
    <%= f.text_area :bio, class: 'w-[100%] border border-1 border-dark', rows: "7" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'w-[100%] border border-3 border-dark mt-5 mb-5' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
